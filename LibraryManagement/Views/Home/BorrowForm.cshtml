@model LibraryManagement.Models.BorrowBook

@{
    ViewBag.Title = "Borrow Book";
}
<div class="contact-container">
    <div class="contact-left">
        <div class="contact-image">
            <img src="~/Content/Images/borrow.jpg" alt="Borrow Book" class="img-fluid" />
        </div>
        <div class="contact-info">
            <h4>Borrowing Information</h4>
            <p>Please fill in the form to borrow a book.</p>
        </div>
    </div>
    <div class="contact-right">
        <h1 class="contact-heading">Borrow Book</h1>
        <div class="contact-form">
            @using (Html.BeginForm("CreateBorrowRequest", "Home", FormMethod.Post))
            {
                @Html.HiddenFor(m => m.Id)

                <div class="form-group mb-3">
                    <label for="Name">Name</label>
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control", @id = "Name", placeholder = "Enter your name" })
                </div>

                <div class="form-group mb-3">
                    <label for="Email">Email</label>
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @id = "Email", placeholder = "Enter your email" })
                </div>

                <div class="form-group mb-3">
                    <label for="Contact">Contact</label>
                    @Html.TextBoxFor(m => m.Contact, new { @class = "form-control", @id = "Contact", placeholder = "Enter your contact number" })
                </div>

                <div class="form-group mb-3">
                    <label for="IssueDate">Book Issue Date</label>
                    @Html.TextBoxFor(m => m.BookIssueDate, "{0:yyyy-MM-dd}", new { @class = "form-control", @id = "IssueDate", @type = "date" })
                </div>

                <div class="form-group mb-3">
                    <label for="ReturnDate">Book Return Date</label>
                    @Html.TextBoxFor(m => m.BookReturnDate, "{0:yyyy-MM-dd}", new { @class = "form-control", @id = "ReturnDate", @type = "date" })
                </div>

                <div class="mt-3 d-inline-flex">
                    <button type="submit" class="btn btn-primary small-btn">Confirm</button>
                    <a href="@Url.Action("Books", "Home")" class="btn btn-secondary" style="margin-left: 5px;">Go Back</a>
                </div>



            }

            @if (ViewBag.Message != null)
            {
                <div class="alert alert-success mt-3">@ViewBag.Message</div>
            }
        </div>



    </div>
</div>

<style>
    .contact-container {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;
        padding: 40px;
        background-color: #F0F8FF;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .contact-left {
        flex: 1;
        display: flex;
        flex-direction: column;
        align-items: center;
        padding-right: 20px;
    }

    .contact-image {
        width: 100%; /* Full width for the image container */
        margin-bottom: 20px;
    }

        .contact-image img {
            width: 100%;
            height: 100%;
            object-fit: cover; /* Fill the container without stretching the image */
            border-radius: 10px;
        }

    .contact-info {
        text-align: center;
        padding: 20px;
    }

        .contact-info h4 {
            font-size: 1.5rem;
            color: #007BFF;
            margin-bottom: 20px;
        }

    .contact-right {
        flex: 1.5;
        background-color: #FFF;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        margin-left: 20px;
    }

    .contact-heading {
        font-size: 2rem;
        color: #008000;
        text-align: center;
        margin-bottom: 30px;
    }

    .form-group label {
        font-weight: bold;
        color: #333;
    }

    .form-control {
        border-radius: 5px;
        border: 1px solid #CCC;
        padding: 10px;
    }

    .btn-primary {
        background-color: #007BFF;
        border: none;
        border-radius: 5px;
        padding: 10px 20px;
        color: #FFF;
        transition: background-color 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    .btn-secondary {
        background-color: #6c757d;
        border: none;
        border-radius: 5px;
        padding: 10px 20px;
        color: #FFF;
        transition: background-color 0.3s ease;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
        }


    .alert {
        font-size: 1rem;
        border-radius: 5px;
    }

    .btn {
        margin: 0; /* Ensure no default margins */
    }

    .btn-gap {
        margin-left: 2px; /* Fine-tune the gap */

    }
</style>