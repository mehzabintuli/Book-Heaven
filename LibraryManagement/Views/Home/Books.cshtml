@model IEnumerable<LibraryManagement.Controllers.HomeController.Book>

@{
    ViewBag.Title = "Books";
}

<h2>Books</h2>

<div class="d-flex justify-content-end mb-3">
    <form asp-action="Books" method="get" class="form-inline my-2 my-lg-0">
        <input class="form-control mr-sm-2" type="search" name="searchString" placeholder="Search" aria-label="Search" value="@ViewBag.SearchString">
        <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
    </form>
</div>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th style="width: 25%;">Details</th>
            <th>Summary</th>
            <th>Books</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model)
        {
            <tr>
                <td>@book.Id</td>
                <td>
                    <strong>Title:</strong> @book.Title <br />
                    <strong>Author:</strong> @book.Author <br />
                    <strong>Genre:</strong> @book.Genre <br />
                    <strong>Language:</strong> @book.Language <br />
                    <strong>Available:</strong> @(book.IsAvailable ? "Yes" : "No") <br />
                    <a href="@Url.Action("Borrow", "Home", new { id = book.Id })" class="btn btn-success" @(book.IsAvailable ? "" : "disabled")>Borrow</a>
                    <a href="@Url.Content(book.PdfUrl)" class="btn btn-primary ml-2">PDF</a>
                </td>
                <td>@book.Summary</td>
                <td>
                    <img src="@book.ImageUrl" alt="@book.Title" style="width: 100px; height: auto;" />
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="d-flex justify-content-end">
    @if (ViewBag.CurrentPage > 1)
    {
        <a href="@Url.Action("Books", new { page = ViewBag.CurrentPage - 1, searchString = ViewBag.SearchString })" class="btn btn-primary mr-2">Previous</a>
    }

    @if (ViewBag.CurrentPage < ViewBag.TotalPages)
    {
        <a href="@Url.Action("Books", new { page = ViewBag.CurrentPage + 1, searchString = ViewBag.SearchString })" class="btn btn-primary">Next</a>
    }
</div>
