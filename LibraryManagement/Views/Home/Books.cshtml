@model IEnumerable<LibraryManagement.Controllers.HomeController.Book>

@{
    ViewBag.Title = "Books";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center mb-4">Book Lists</h2>

<div class="d-flex justify-content-end mb-3">
    <form asp-action="Books" method="get" class="form-inline my-2 my-lg-0">
        <input class="form-control mr-sm-2" type="search" name="searchString" placeholder="Search" aria-label="Search" value="@ViewBag.SearchString">
        <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
    </form>
</div>

<table class="table">
    <thead>
        <tr>
            <th style="background-color: #007BFF; color: white;">Title</th> <!-- Change header color -->
            <th style="background-color: #007BFF; color: white;">Details</th>
            <th style="background-color: #007BFF; color: white;">Summary</th>
            <th style="background-color: #007BFF; color: white;">Cover</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model)
        {
            <tr>
                <td>@book.Title</td>
                <td>
                    <strong>Author:</strong> @book.Author_Id <br />
                    <strong>Genre:</strong> @book.Genre <br />
                    <strong>Language:</strong> @book.Language <br />
                    <strong>Available:</strong> @(book.Available ? "Yes" : "No") <br />
                    <div class="mt-2">
                        @if (book.Available)
                        {
                            <a href="@Url.Action("Borrow", "Home", new { id = book.Id })" class="btn btn-success btn-sm">Borrow</a>
                        }
                        else
                        {
                            <a href="@Url.Action("UserWishlist", "Home", new { id = book.Id })" class="btn btn-light-purple btn-sm">Add to List</a>
                        }

                        <a href="@Url.Content(book.PDF_Link)" class="btn btn-sm ml-2" style="background-color: #FFA500; color: white;">PDF</a>

                    </div>
                </td>
                <td>@book.Summary</td>
                <td>
                    <img src="@book.Cover_Image" alt="@book.Title" class="img-thumbnail" style="width: 100px; height: auto;" />
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="d-flex justify-content-end">
    @if (ViewBag.CurrentPage > 1)
    {
        <a href="@Url.Action("Books", new { page = ViewBag.CurrentPage - 1, searchString = ViewBag.SearchString })" class="btn btn-primary mr-2">Previous</a>
    }

    @if (ViewBag.CurrentPage < ViewBag.TotalPages)
    {
        <a href="@Url.Action("Books", new { page = ViewBag.CurrentPage + 1, searchString = ViewBag.SearchString })" class="btn btn-primary">Next</a>
    }
</div>

<!-- CSS Styles -->
<style>
    .table {
        border-collapse: collapse;
        width: 100%;
    }

        .table tbody tr {
            background-color: white; /* All rows default to white */
        }

            .table tbody tr:hover {
                background-color: #f1f1f1; /* Light gray on hover */
            }

    .btn-light-purple {
        background-color: #D8BFD8; /* Light Purple */
        border: none;
        color: #000; /* Adjust text color for visibility */
    }

        .btn-light-purple:hover {
            background-color: #C8A2C8; /* Slightly darker on hover */
        }
</style>
