@model IEnumerable<LibraryManagement.Controllers.HomeController.Book>

@{
    ViewBag.Title = "Books";
}

<h2>Books</h2>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Details</th>
            <th>Books</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model)
        {
            <tr>
                <td>@book.Id</td>
                <td>
                    <strong>Title:</strong> @book.Title <br />
                    <strong>Author:</strong> @book.Author <br />
                    <strong>Genre:</strong> @book.Genre <br />
                    <strong>Language:</strong> @book.Language <br />
                    <strong>Available:</strong> @(book.IsAvailable ? "Yes" : "No") <br />
                    <a href="@Url.Action("Borrow", "Home", new { id = book.Id })" class="btn btn-success" @(book.IsAvailable ? "" : "disabled")>Borrow</a>
                </td>
                <td>
                    <img src="@book.ImageUrl" alt="@book.Title" style="width: 100px; height: auto;" />
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="d-flex justify-content-end">
    @if (ViewBag.CurrentPage > 1)
    {
        <a href="@Url.Action("Books", new { page = ViewBag.CurrentPage - 1 })" class="btn btn-primary mr-2">Previous</a>
    }

    @if (ViewBag.CurrentPage < ViewBag.TotalPages)
    {
        <a href="@Url.Action("Books", new { page = ViewBag.CurrentPage + 1 })" class="btn btn-primary">Next</a>
    }
</div>
