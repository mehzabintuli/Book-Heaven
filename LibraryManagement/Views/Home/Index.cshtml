@{
    ViewBag.Title = "Main Page";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Use your layout if you have one
}

<div class="text-center mt-5">
    <h2>Welcome to Book Heaven</h2>
    <p>To meet up your expectations</p>
</div>

<div id="indexCarousel" class="carousel slide mt-4" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#indexCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#indexCarousel" data-slide-to="1"></li>
        <li data-target="#indexCarousel" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="~/Content/Images/index1.jpg" class="d-block w-100" alt="Index 1">
        </div>
        <div class="carousel-item">
            <img src="~/Content/Images/index2.jpg" class="d-block w-100" alt="Index 2">
        </div>
        <div class="carousel-item">
            <img src="~/Content/Images/index3.jpg" class="d-block w-100" alt="Index 3">
        </div>
    </div>
    <a class="carousel-control-prev" href="#indexCarousel" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#indexCarousel" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<style>
    .text-center {
        text-align: center;
    }

    .mt-5 {
        margin-top: 5rem;
    }

    .mt-4 {
        margin-top: 4rem;
    }

    .carousel-item img {
        height: 400px;
        object-fit: cover;
    }
</style>
