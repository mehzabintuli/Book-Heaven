@model IEnumerable<LibraryManagement.Controllers.HomeController.Author>

@{
    ViewBag.Title = "Authors";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet" />

<style>
    .authors-list {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
        padding-top: 20px;
        justify-content: space-between;
    }

    .author-item {
        border: 1px solid #ddd;
        padding: 15px;
        width: calc(25% - 20px);
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        border-radius: 8px;
        text-align: center;
        background-color: #f9f9f9;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }

        .author-item img {
            max-width: 100%;
            height: 200px;
            object-fit: cover;
            margin-bottom: 10px;
        }

    .btn-yellow {
        background-color: #ffc107; /* Bootstrap yellow color */
        color: black;
        border: none;
        padding: 10px 20px;
        border-radius: 5px;
        cursor: pointer;
    }

        .btn-yellow:hover {
            background-color: #e0a800; /* Darker shade for hover effect */
        }

    .pagination {
        display: flex;
        justify-content: flex-end;
        margin-top: 20px;
    }

        .pagination button {
            margin: 0 5px;
            background-color: #007bff;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            cursor: pointer;
        }

            .pagination button:hover {
                background-color: #0056b3;
            }

    .search-bar {
        display: flex;
        justify-content: flex-end;
        margin-bottom: 20px;
    }

        .search-bar input {
            width: 200px;
            padding: 5px 10px;
            margin-right: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        .search-bar button {
            background-color: #007bff;
            color: white;
            border: none;
            padding: 5px 10px;
            border-radius: 5px;
            cursor: pointer;
        }

            .search-bar button:hover {
                background-color: #0056b3;
            }

    .navbar-nav {
        justify-content: center;
    }
</style>

<div class="container">
    <div class="d-flex justify-content-between align-items-center">
        <h2>Authors</h2>
        <div class="search-bar">
            <form action="@Url.Action("Authors", "Home")" method="get">
                <input type="text" name="searchTerm" placeholder="Search authors...">
                <button type="submit">Search</button>
            </form>
        </div>
    </div>

    <div class="authors-list">
        @foreach (var author in Model)
        {
            <div class="author-item">
                <img src="@author.Image" alt="@author.Name" />
                <h3>@author.Name</h3>
                <p>@author.About</p>
                @*<h6>Books:</h6>
                    <ul>
                        @foreach (var book in author.Books)
                        {
                            <li>@book.Title</li>
                        }
                    </ul>*@
                <button class="btn-yellow" onclick="location.href='@Url.Action("AuthorBooks", "Home", new { authorId = author.Id })'">View Books</button>

            </div>
        }



        @for (int i = Model.Count(); i < 4; i++)
        {
            <div class="author-item" style="visibility: hidden;"></div>
        }
    </div>

    <div class="pagination">
        @if (ViewBag.CurrentPage > 1)
        {
            <button onclick="location.href='@Url.Action("Authors", "Home", new { page = ViewBag.CurrentPage - 1 })'">Previous</button>
        }
        @if (ViewBag.CurrentPage < ViewBag.TotalPages)
        {
            <button onclick="location.href='@Url.Action("Authors", "Home", new { page = ViewBag.CurrentPage + 1 })'">Next</button>
        }
    </div>
</div>