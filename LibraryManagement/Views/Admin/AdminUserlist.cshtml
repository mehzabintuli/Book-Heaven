@model IEnumerable<LibraryManagement.Models.SignUpModel>

@{
    ViewBag.Title = "User List";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>User List</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Gender</th>
            <th>Phone Number</th>
            <th>Date of Birth</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.Email</td>
                <td>@user.Gender</td>
                <td>@user.PhoneNumber</td>
                <td>@user.DOB.ToString("yyyy-MM-dd")</td>
            </tr>
        }
    </tbody>
</table>
