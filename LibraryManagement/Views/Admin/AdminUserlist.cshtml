@model IEnumerable<LibraryManagement.Models.Signup>

@{
    ViewBag.Title = "User List";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <h2>User List</h2>

    <table class="table table-striped table-hover">
        <thead class="thead-dark">
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Gender</th>
                <th>Phone Number</th>
                <th>Date of Birth</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.FirstName</td>
                    <td>@user.LastName</td>
                    <td>@user.Email</td>
                    <td>@user.Gender</td>
                    <td>@user.PhoneNumber</td>
                    <td>@user.DOB.ToString("yyyy-MM-dd")</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<style>
    .container-fluid {
        padding: 20px;
        background-color: #f8f9fa; /* Light background for contrast */
        width: 100%; /* Ensure full width */
    }

    h2 {
        margin-bottom: 20px; /* Space below the heading */
        color: #343a40; /* Darker heading color */
    }

    .table {
        width: 100%; /* Ensure the table takes the full width */
        background-color: white; /* White background for table */
        border-radius: 5px; /* Rounded corners */
    }

        .table th {
            background-color: #007bff; /* Bootstrap primary color for header */
            color: white; /* White text in header */
            padding: 33px; /* Increased padding for more space */
            text-align: left; /* Align text to the left */
        }

    .table-hover tbody tr:hover {
        background-color: #f1f1f1; /* Light grey background on hover */
    }

    .table td {
        vertical-align: middle; /* Center content vertically */
        padding: 33px; /* Padding for table cells */

    }
</style>