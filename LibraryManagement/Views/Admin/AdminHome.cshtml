@{
    ViewBag.Title = "Admin";
    Layout = "~/Views/Shared/_NoNavLayout.cshtml"; // Adjust if necessary
}

<div class="container-fluid">
    <div class="row">
        <!-- Sidebar -->
        <nav id="sidebar" class="col-md-2 d-none d-md-block bg-dark sidebar">
            <div class="sidebar-sticky">
                <div class="user-info text-center mt-3">
                    <img src="~/Content/Images/adminlogo.jpg" class="rounded-circle" alt="User Image" width="60">
                    <h5 class="mt-2 text-white">Admin</h5>
                    <span class="text-success">● Online</span>
                </div>
                <ul class="nav flex-column mt-4">
                    <li class="nav-item">
                        <a class="nav-link text-white" href="@Url.Action("AdminHome", "Admin")">
                            <i class="fas fa-tachometer-alt"></i>
                            Dashboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" href="@Url.Action("AdminBook", "Admin")">
                            <i class="fas fa-cubes"></i>
                            Books
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" href="@Url.Action("AdminAuthor", "Admin")">
                            <i class="fas fa-shapes"></i>
                            Authors
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" href="@Url.Action("AdminUserlist", "Admin")">
                            <i class="fas fa-table"></i>
                            Users
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" href="@Url.Action("AdminBorrowlist", "Admin")">
                            <i class="fas fa-th-large"></i>
                            Borrow List
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" href="@Url.Action("AdminWishlist", "Admin")">
                            <i class="fas fa-dollar-sign"></i>
                            Wish List
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" href="@Url.Action("AdminMessage", "Admin")">
                            <i class="fas fa-envelope"></i>
                            Message
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" href="@Url.Action("Login", "Account")">
                            <i class="fas fa-envelope"></i>
                            Logout
                        </a>
                    </li>
                </ul>
            </div>
        </nav>

        <!-- Main content -->
        <div class="col-md-10 ml-sm-auto col-lg-10 px-0">
            <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
                <a class="navbar-brand" href="#">
                    <img src="~/Content/Images/index icon.png" alt="Book Icon" class="icon mr-2">
                    Welcome to Admin Panel
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
               
            </nav>

            <main role="main" class="px-4 mt-4">

                <div class="profile-form mt-5">
                    <h3>Profile</h3>
                    <p>You can edit your information here.</p>
                    <form>
                        <div class="form-group">
                            <label for="name">Name</label>
                            <input type="text" class="form-control" id="name" placeholder="Enter your name">
                        </div>
                        <div class="form-group">
                            <label for="email">Email</label>
                            <input type="email" class="form-control" id="email" placeholder="Enter your email">
                        </div>
                        <div class="form-group">
                            <label for="password">Password</label>
                            <input type="password" class="form-control" id="password" placeholder="Enter your password">
                        </div>
                        <button type="submit" class="btn btn-primary">Save Changes</button>
                    </form>
                </div>
            </main>
        </div>
    </div>
</div>

<style>
    .container-fluid {
        padding: 0;
    }

    .sidebar {
        height: 100vh;
        position: fixed;
    }

    .sidebar-sticky {
        position: -webkit-sticky;
        position: sticky;
        top: 0;
        height: calc(100vh - 48px);
        padding-top: .5rem;
        overflow-x: hidden;
        overflow-y: auto;
    }

    .user-info {
        margin-bottom: 1rem;
    }

    .nav-link {
        font-size: 1.1rem;
    }

    .navbar .icon {
        width: 30px;
        height: 30px;
    }

    .navbar {
        margin-left: 16.666667%;
    }

    main {
        margin-left: 16.666667%;
    }

    .profile-form {
        max-width: 600px;
        margin: 0 auto;
    }

        .profile-form h3 {
            margin-bottom: 1rem;
        }

        .profile-form p {
            margin-bottom: 1.5rem;
            color: #6c757d;
        }

        .profile-form .form-group {
            margin-bottom: 1rem;
        }
</style>
