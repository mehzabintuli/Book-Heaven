@model IEnumerable<LibraryManagement.Models.book>
@{
    ViewBag.Title = "Admin Books";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Book Lists</h2>
<div class="container">
    <div class="d-flex justify-content-end mb-3">
        <!-- Moved button here for top-right alignment -->
        <a href="@Url.Action("CreateBook", "Admin")" class="btn btn-success">Add New</a>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Details</th>
                <th style="width: 20%;">Summary</th> <!-- Adjusted width for summary column -->
                <th>PDF</th>
                <th>Cover</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var book in Model)
            {
                <tr>
                    <td>@book.Title</td>
                    <td>
                        <strong>Author:</strong> @book.Author_Id <br />
                        <strong>Genre:</strong> @book.Genre <br />
                        <strong>Language:</strong> @book.Language <br />
                        <strong>Available:</strong> @(book.Available ? "Yes" : "No") <br />
                    </td>
                    <td>@book.Summary</td>
                    <td>
                        @if (!string.IsNullOrEmpty(book.PDF_Link))
                        {
                            <a href="@book.PDF_Link" target="_blank" class="btn btn-info">View PDF</a>
                        }
                        else
                        {
                            <a href="@Url.Action("AddPdf", "Admin", new { id = book.Id })" class="btn btn-secondary">Add PDF</a>
                        }
                    </td>
                    <td>
                        <img src="@book.Cover_Image" alt="@book.Title" style="width: 100px; height: auto;" />
                    </td>
                    <td>
                        <a href="@Url.Action("EditBook", "Admin", new { id = book.Id })" class="btn btn-warning">Edit</a>
                        <span style="margin-right: 10px;"></span> <!-- Gap between buttons -->
                        <a href="@Url.Action("DeleteBook", "Admin", new { id = book.Id })" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <!-- Pagination controls -->
    <div class="d-flex justify-content-end">
        @if (ViewBag.CurrentPage > 1)
        {
            <a href="@Url.Action("AdminBook", new { page = ViewBag.CurrentPage - 1 })" class="btn btn-primary me-2">Previous</a>
        }

        @if (ViewBag.CurrentPage < ViewBag.TotalPages)
        {
            <a href="@Url.Action("AdminBook", new { page = ViewBag.CurrentPage + 1 })" class="btn btn-primary">Next</a>
        }

    </div>
</div>

<!-- CSS for improved table layout -->
<style>
    h2 {
        color: #0056b3;
        font-weight: 600;
        text-transform: uppercase;
        margin-bottom: 30px;
    }

    .table-header th {
        background-color: #0056b3;
        color: white;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        text-align: left;
        padding: 15px; /* Increased padding for header cells */
    }

    .table td {
        padding: 15px 20px; /* Increased padding for data cells */
        color: #333;
        font-size: 16px; /* Increased font size */
    }

    .table-hover tbody tr:hover {
        background-color: #f1f3f5;
    }

    .actions {
        text-align: center;
    }

    .container {
        max-width: 100% !important;
    }

    .btn-group {
        display: flex;
        justify-content: center;
        gap: 10px; /* Space between buttons */
    }

    .btn {
        width: 100px; /* Uniform button width */
    }

    table {
        width: 100%;
        table-layout: fixed; /* Forces table to respect widths */
    }
</style>